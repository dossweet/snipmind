.container {
    padding: 20rpx;
    background: #f5f5f5;
}

.card-list {
    width: 100%;
}

.card {
    background: #fff;
    border-radius: 16rpx;
    margin-bottom: 20rpx;
    padding: 30rpx;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section {
    margin-bottom: 20rpx;
}

.section:last-child {
    margin-bottom: 0;
}

.title {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 10rpx;
}

.content {
    font-size: 28rpx;
    color: #666;
    line-height: 1.6;
}