page {
    height: 100%;
    background-color: #f8f9fa;
}

.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    padding: 20rpx;
    box-sizing: border-box;
}

.content-section {
    height: 100%;
    display: flex;
    flex-direction: column;
}

.card-swiper {
    height: 85%;
    width: 100%;
}

.card-wrapper {
    height: 100%;
    padding: 20rpx 0;
    transition: all 0.3s ease;
    transform: scale(0.9);
}

.card-wrapper.active {
    transform: scale(1);
}

.card {
    height: 100%;
    background: white;
    border-radius: 20rpx;
    box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
    padding: 40rpx;
    box-sizing: border-box;
    overflow-y: auto;
    position: relative;
    transform-style: preserve-3d;
    perspective: 1000rpx;
}

.card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.3) 0%, rgba(255, 255, 255, 0) 50%);
    border-radius: 20rpx;
    z-index: 1;
    pointer-events: none;
}

.section {
    margin-bottom: 30rpx;
}

.title {
    font-size: 36rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 20rpx;
    position: relative;
    padding-bottom: 15rpx;
}

.title::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 60rpx;
    height: 6rpx;
    background-color: #4a90e2;
    border-radius: 3rpx;
}

.content {
    font-size: 30rpx;
    color: #666;
    line-height: 1.6;
}

.indicator {
    height: 80rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #666;
    font-size: 28rpx;
}